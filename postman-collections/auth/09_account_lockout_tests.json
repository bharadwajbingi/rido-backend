            "type": "text/javascript",
            "exec": [
              "setTimeout(() => {}, 1000);"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Account Locked', () => pm.response.to.have.status(423));",
              "pm.test('Locked Message', () => pm.expect(pm.response.json().error).to.include('locked'));"
            ]
          }
        }
      ]
