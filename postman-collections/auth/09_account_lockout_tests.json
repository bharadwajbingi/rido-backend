    {
      "name": "\ud83d\udd13 Unlock (Admin/Internal)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-SYSTEM-KEY",
            "value": "InternalSecretKey"
          }
        ],
        "url": "{{base_url}}/internal/admin/unlock",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"{{lock_user}}\"\n}"
        },
        "description": "Note: May need debug profile enabled"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Unlock Response', () => pm.expect(pm.response.code).to.be.oneOf([200, 404]));"
            ]
          }
        }
      ]
    },
