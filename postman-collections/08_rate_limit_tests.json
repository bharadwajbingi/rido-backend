      "name": "\ud83d\udccb Setup - Create Rate Limit Test User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"ratetest_f798b36e\",\n    \"password\": \"SecurePass123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Setup', () => pm.expect(pm.response.code).to.be.oneOf([200, 409]));",
              "var reqBody = JSON.parse(pm.request.body.raw);",
              "pm.environment.set('rate_user', reqBody.username);"
            ]
          }
        }
      ]
