{
  "info": {
    "_postman_id": "abbdf9ca-f7e2-49ef-bb1e-6d68b1084a48",
    "name": "06 - Access Token Validation Tests",
    "description": "Comprehensive JWT access token testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "\ud83d\udccb Setup - Register & Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"accesstest_34cfc128\",\n    \"password\": \"SecurePass123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Setup', () => pm.expect(pm.response.code).to.be.oneOf([200, 409]));",
              "var reqBody = JSON.parse(pm.request.body.raw);",
              "pm.environment.set('access_user', reqBody.username);"
            ]
          }
        }
      ]
    },
    {
      "name": "\ud83d\udccb Setup - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"{{access_user}}\",\n    \"password\": \"SecurePass123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "setTimeout(() => {}, 1000);"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Login', () => pm.response.to.have.status(200));",
              "const resp = pm.response.json();",
              "pm.environment.set('valid_access', resp.accessToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "\u2705 Valid Token - Access Allowed",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{valid_access}}"
          }
        ],
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Access Allowed', () => pm.response.to.have.status(200));",
              "pm.test('Has user data', () => pm.expect(pm.response.json().username).to.exist);"
            ]
          }
        }
      ]
    },
    {
      "name": "\u274c Missing Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Missing Token Rejected', () => pm.response.to.have.status(401));"
            ]
          }
        }
      ]
    },
    {
      "name": "\u274c Expired Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer eyJhbGciOiJSUzI1NiJ9.eyJleHAiOjE2MDAwMDAwMDB9.fake"
          }
        ],
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Expired Token Rejected', () => pm.response.to.have.status(401));"
            ]
          }
        }
      ]
    },
    {
      "name": "\u274c Tampered Signature",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer eyJhbGciOiJSUzI1NiJ9.eyJzdWIiOiJ0ZXN0In0.tampered"
          }
        ],
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Tampered Signature Rejected', () => pm.response.to.have.status(401));"
            ]
          }
        }
      ]
    },
    {
      "name": "\u274c Wrong Algorithm (HS256 instead of RS256)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer eyJhbGciOiJIUzI1NiJ9.eyJzdWIiOiJ0ZXN0In0.fake"
          }
        ],
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Wrong Algorithm Rejected', () => pm.response.to.have.status(401));"
            ]
          }
        }
      ]
    },
    {
      "name": "\u274c Missing Claims",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer eyJhbGciOiJSUzI1NiJ9.e30.fake"
          }
        ],
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Missing Claims Rejected', () => pm.response.to.have.status(401));"
            ]
          }
        }
      ]
    },
    {
      "name": "\u274c Invalid Claims",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer eyJhbGciOiJSUzI1NiJ9.eyJpbnZhbGlkIjoidHJ1ZSJ9.fake"
          }
        ],
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Invalid Claims Rejected', () => pm.response.to.have.status(401));"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    }
  ]
}